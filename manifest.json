{
  "name": "Phantom_script_generate",
  "version": "0.5",
  "manifest_version": 2,
  "description": "Chrome Extension which recorder steps and generates PhantomJS script",
  "icons": {
    "48": "makina-icon.png",
    "128": "makina-icon-128.png" 
  },
  "browser_action": {
    "default_icon": "makina-icon.png",
    "default_popup": "control_panel.html",
    "default_title": "PhantomJs recorder"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
     "tabs",
     "background",
     "http://*/*"
  ],
  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["phantom.js"]
  }],
  "offline_enabled": false,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

